<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">
  
  <!-- Homepage -->
  <url>
    <loc><%= request.base_url %>/</loc>
    <lastmod><%= @last_modified.strftime('%Y-%m-%d') %></lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
  </url>
  
  <!-- About Page -->
  <url>
    <loc><%= request.base_url %>/about</loc>
    <lastmod><%= @site_config.updated_at.strftime('%Y-%m-%d') %></lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>
  
  <!-- Archive Page -->
  <url>
    <loc><%= request.base_url %>/archive</loc>
    <lastmod><%= @last_modified.strftime('%Y-%m-%d') %></lastmod>
    <changefreq>daily</changefreq>
    <priority>0.9</priority>
  </url>
  
  <!-- RSS Feed -->
  <url>
    <loc><%= request.base_url %>/feed.xml</loc>
    <lastmod><%= @last_modified.strftime('%Y-%m-%d') %></lastmod>
    <changefreq>daily</changefreq>
    <priority>0.7</priority>
  </url>
  
  <!-- Published Posts -->
  <% @posts.each do |post| %>
    <url>
      <loc><%= request.base_url %>/<%= post.slug %>.html</loc>
      <lastmod><%= post.updated_at.strftime('%Y-%m-%d') %></lastmod>
      <changefreq>monthly</changefreq>
      <priority><%= (post.published_at && post.published_at > 3.months.ago) ? '0.8' : '0.6' %></priority>
      
      <% if post.featured_image_url.present? %>
        <image:image>
          <image:loc><%= post.featured_image_url %></image:loc>
          <image:title><%= html_escape(post.title) %></image:title>
          <image:caption><%= html_escape(post.excerpt) if post.excerpt.present? %></image:caption>
        </image:image>
      <% end %>
    </url>
  <% end %>
  
</urlset>